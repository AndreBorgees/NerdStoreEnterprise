@using NSE.WebApp.MVC.Extensions
@model NSE.WebApp.MVC.Models.OerderTransactionViewModel

<article class="card-body border-top">
    <dl class="row">
        @{
            if (Model.UsedVoucher)
            {
                    <dt class="col-sm-10">Subtotal: <span class="float-right text-muted">@Model.OrderItems.Sum(i => i.Quantity) itens</span></dt>
                    <dd class="col-sm-2 text-right">
                        <strong>@this.FormatCoin(Model.TotalValue + Model.Discount)</strong>
                    </dd>

                    <dt class="col-sm-10">Desconto: <span class="float-right text-muted">@Model.VoucherCode</span></dt>
                    <dd class="col-sm-2 text-danger text-right">
                    <strong>@this.FormatCoin(Model.Discount)</strong>
                    </dd>
            }
        }
        <dt class="col-sm-10">Total:</dt>
        <dd class="col-sm-2 text-right">
            <strong class="h5 text-dark">@this.FormatCoin(Model.TotalValue)</strong>
        </dd>
    </dl>
</article>